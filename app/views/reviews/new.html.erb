<div class= "text-center">
    <h3 class = "text_font">レビューの追加</h3>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(model: @review, local: true) do |f| %>
      

      <div class="form-group">
        <%= f.label :title, 'タイトル' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      
      <div class="form-group">
          <%= f.label :point, '点数' %>
          <%= f.number_field :point,min:1,max:5,step:1 %>
      </div>

      <div class="form-group">
        <%= f.label :content, '感想' %>
        <%= f.text_area :content, class: "form-control", size: "100x10" %>

      </div>
      
      
      <div class="form-group">
        <%= f.file_field :image %>
       
      </div>
    
    <%= f.hidden_field :spot_id, :value => @spot %>
      
      
     


      <%= f.submit '登録', class: 'btn btn-dark btn-block' %>
    <% end %>
    
  </div>
</div>
        