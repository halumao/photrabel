<ul class="list-unstyled">
    <% spots.each do |spot| %>
        
      <div class= "row">
        <div class= "col-sm-5">
          <%= image_tag spot.image.thumb.url %>
        </div>
        <div class= "col-sm-7">
          <div class= "spot-block">
            <div>
              <h3><%= spot.name %></h3>
            </div>
            <p>ユーザー名 <%= spot.user.name %> </p>
           
            
            <a href="#" class="card-link"><%= link_to '詳細', spot_path(spot), class: 'btn btn-dark' %></a>
            <% if current_user == spot.user %>
             <a href="#" class="card-link"><%= link_to '変更', edit_spot_path(spot), class: 'btn btn-dark' %>
            <% end %>
          </div>
        </div>
      </div>
       
    <% end %>
    
    
</ul>