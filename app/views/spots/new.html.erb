

<div class= "text-center">
    <h3 class = "text_font">観光地の追加</h3>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(model: @spot, local: true) do |f| %>
      

      <div class="form-group">
        <%= f.label :name, '観光地の名前' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      
      <div class="form-group">
          <%= f.label :prefecture, '都道府県' %>
          <%= f.select :prefecture,Schema.delivery_areas.keys, {}, {class: 'hoge'} %>
      </div>

      <div class="form-group">
        <%= f.label :address, '住所' %>
        <%= f.text_field :address, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :time_open, '開店時間' %>
        <%= f.text_field :time_open, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :time_close, '閉店時間' %>
        <%= f.text_field :time_close, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :day_close, '定休日' %>
        <%= f.text_field :day_close, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :money, '予算' %>
        <%= f.text_field :money, class: 'form-control' %>
      </div>
      
      
        <%= f.file_field :image %>
       
      


      <%= f.submit '登録', class: 'btn btn-dark btn-block' %>
    <% end %>
    
  </div>
</div>
        